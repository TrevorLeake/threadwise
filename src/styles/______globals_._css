:root {
  text-align: center;
  --color-text: #111;
  --color-background: #f8f8f8;
  --color-tag-text: #888;
  --color-dulled-text: #555;
  --color-shadier-bg: #eee;

  --font-heading: "Playfair Display", serif;
  --font-subheading: "IBM Plex Serif", serif;
  --font-body: var(--roboto);
  --font-pleasant-authority: "Space Mono", monospace;


/* sccss? */
  --heading-min: 3rem;
  --heading-scalar: 10vw;
  --heading-max: 7rem;

  --subheading-min:1.3rem;
  --subheading-scalar:1vw;
  --subheading-max:2rem;

  --body-min:1rem;
  --body-scalar:2vw;
  --body-max:1.34rem;

  --site-voice-min:1rem;
  --site-voice-scalar:20vw;
  --site-voice-max:3rem;


  --heading-ramp: clamp(2.3rem, 2.3rem + 10vw, 6rem);

  --section-heading-ramp: clamp(1.5rem, 1.5rem + 7vw, 3rem);
  --subheading-ramp: clamp(1.3rem, 1.3rem + 1vw, 2rem);
  --body-ramp: clamp(1rem, 1rem + 1vw, 1rem); 
  --site-voice-ramp: clamp(1rem, 1rem + 3vw, 3rem); 

